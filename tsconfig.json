{
  "compilerOptions": {
    "outDir": "./server/build",  // Output directory for compiled JavaScript
    "rootDir": "./server",       // Root directory for TypeScript source files
    "module": "commonjs",
    "target": "es6",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["server/**/*"],    // Include all files in the server folder
  "exclude": ["node_modules"]   // Exclude node_modules
}
